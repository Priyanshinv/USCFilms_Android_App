<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"></style>
    <style name="AppTheme.Launcher" parent="Theme.AppCompat">
    <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:dropDownListViewStyle">@style/MyDropDownListView</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropDownItem</item>
    </style>
    <style name="PopupMenu" parent="android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyDropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>
    <style name="MySpinnerDropDownItem" parent="android:style/Widget.DropDownItem.Spinner">
        <item name="android:background">@drawable/selectable_background</item>
        <item name="android:checkMark">@null</item>
    </style>
</resources>